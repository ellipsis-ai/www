<header class="bg-black ptxl mobile-ptl" role="banner">

  <div class="container container-c container-narrow phxxl mobile-phxl">
    <div class="columns columns-elastic mobile-columns-float">
      {% assign default_paths = site.pages | map: "path" %}
      {% assign page_paths = site.header_pages | default: default_paths %}
      <div class="column column-shrink mbxs">
        <a href="{{ "/" | relative_url }}">
          {% include logo_white_pink.liquid width=128 height=36 %}
        </a>
      </div>

      <div class="column column-expand align-r mobile-align-l">
        {% if page_paths %}
          <nav>
            <div>
              {% for path in page_paths %}
                {% assign my_page = site.pages | where: "path", path | first %}
                {% if my_page.title %}
                  {% if page.title == my_page.title %}
                    <a class="link-light display-inline-block align-button mrxl pbl border-emphasis-bottom border-pink" href="{{ my_page.url | relative_url }}">{{ my_page.title | escape }}</a>
                  {% else %}
                    <a class="link-light display-inline-block align-button mrxl pbl mbxs" href="{{ my_page.url | relative_url }}">{{ my_page.title | escape }}</a>
                  {% endif %}
                {% endif %}
              {% endfor %}

              <a class="link-light display-inline-block align-button pbl mbxs" href="https://bot.ellipsis.ai/">Sign in</a>
            </div>
          </nav>
        {% endif %}
      </div>
    </div>
  </div>
</header>
